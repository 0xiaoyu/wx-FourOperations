.mmm {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  margin: 5rpx;
  height: 90rpx;
}


.nn {
  margin: 10rpx;
  width: 50rpx;
  font-size: 40rpx;
  font-weight: bold;
  white-space: nowrap;
  display: flex;
  align-items: center;
}
.nn input{
  width: 200rpx;
}

.inputn {
  width: 170rpx;
  height: 30rpx;
  font-size: 40rpx;
  text-align: center;
  border: 2px solid #333;
  border-radius: 5px;
  margin: 10px;
  background-color: chartreuse;
}
block{
  height: 20rpx;
}

.image_c {
  width: 70rpx;
  height: 30rpx;
  margin: 10rpx;
}
#ans{
  font-size: 25rpx;
  display: flex;
  width: 50rpx;
}

.ans-submit {
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  margin: 10rpx;
  height: 40rpx;
}

.sss {
  display: flex;
  justify-content: center;
  align-items: center;
}

button {
  width: 200rpx;
  height: 80rpx;
  background-color: #4caf50;
  border: 2rpx solid #4caf50;
  border-radius: 40rpx;
  color: #fff;
  font-size: 32rpx;
  margin: 20rpx;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

button:hover {
  background-color: #388e3c;
}
.picker {  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  margin-top: 20rpx;  
  width: 750rpx;
  height: 30rpx;
}

.picker-container {  
  width: 100%;  
  height: 30rpx;  
  background-color: #fff;  
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);  
  display: flex;  
  justify-content: center;  
  align-items: center;  
  padding: 10rpx;  
}

.picker-range {  
  width: 750rpx;  
  height: 100%;  
  background-color: #eee;  
  border-radius: 5px;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
  text-align: center;  
  margin-top: 10rpx;  
}
